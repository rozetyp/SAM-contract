{
  "name": "@sam/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "pg": "^8.12.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
  "@types/node": "^22.5.4",
  "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.24.2",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  }
}