{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm build"
  },
  "deploy": {
    "startCommand": "pnpm -w run cron:opps",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": {
    "enabled": true,
    "schedule": "0 13 * * *",
    "command": "pnpm -w run cron:opps"
  }
}
