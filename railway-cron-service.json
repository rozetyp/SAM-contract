{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": {
    "enabled": true,
    "schedule": "0 * * * *",
    "command": "pnpm -w run cron:opps"
  },
  "healthcheck": {
    "command": "pnpm run cron:health",
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  }
}
